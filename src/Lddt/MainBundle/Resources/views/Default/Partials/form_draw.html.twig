<div class="form-group">
    <span class="label-lg">{{ form_label(form.category)}}</span>
    {{ form_errors(form.category) }}
    {{ form_widget(form.category) }}
    <span class="help-block">Saisir la catégorie du dessin.</span>
</div>
<div class="form-group">
    <span class="label-lg">{{ form_label(form.color)}}</span>
    {{ form_errors(form.color) }}
    {{ form_widget(form.color) }}
    <span class="help-block">Cocher les couleurs du dessin.</span>
</div>

<div class="form-group">
    <ul class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e }}">
        {% for tag in form.tags %}
            <li>
                {{ form_errors(tag) }}
                {{ form_widget(tag) }}
            </li>
        {% endfor %}
    </ul>
</div>
{{ form_end(form) }}
{% else %}
