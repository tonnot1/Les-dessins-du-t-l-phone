{% if is_granted("ROLE_USER") %}
{{ form_start(form) }}
<div class="form-group">
    <span class="label-lg">{{ form_label(form.title)}}</span>
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
    <span class="help-block">Saisir le nom du dessin.</span>
</div>
{% if form.pic is defined %}
    <div class="form-group">
        {{ form_errors(form.pic) }}
        {{ form_widget(form.pic) }}
        <span class="help-block">Téléchargez votre dessin.</span>
    </div>
{% endif %}
